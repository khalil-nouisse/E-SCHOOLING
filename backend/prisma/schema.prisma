generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int             @id @default(autoincrement())
  first_name   String
  last_name    String
  sex          Sex?
  cin          String?          @unique
  phoneNumber  String?
  email        String          @unique
  password     String
  role         Role
  isVerified   Boolean         @default(false)
  otp          Int
  otpExpires   DateTime?
  refreshToken String?
  agent        SchoolingAgent? @relation("UserAgent")
  student      Student?        @relation("UserStudent")
}

model Student {
  id                Int           @unique
  baccalaureateType String
  baccalaureateYear Int
  statusCodeStudent String
  Inscription       Inscription[]
  user              User          @relation("UserStudent", fields: [id], references: [id])
}

model SchoolingAgent {
  id             Int           @id
  employmentDate DateTime
  position       String?
  department     String?
  salary         Float?
  phoneNumber    String?
  Inscription    Inscription[]
  user           User          @relation("UserAgent", fields: [id], references: [id])
}

model Inscription {
  id                 Int             @id @default(autoincrement())
  status             STATUS
  submissionDate     DateTime
  validationDate     DateTime?
  rejectionComment   String?
  isFirstInscription Boolean
  studentId          Int
  agentId            Int?
  majorId            Int
  certifications     Certification[]
  documents          Document[]
  agent              SchoolingAgent? @relation(fields: [agentId], references: [id])
  major              Major           @relation(fields: [majorId], references: [id])
  student            Student         @relation(fields: [studentId], references: [id])
}

model Major {
  id           Int           @id @default(autoincrement())
  code         String        @unique
  name         String
  department   String
  isActive     Boolean
  inscriptions Inscription[]
}

model Document {
  id            Int          @id @default(autoincrement())
  isVerified    Boolean
  uploadDate    DateTime
  fileSize      Int
  filePath      String
  fileName      String
  documentType  String
  inscriptionId Int?
  inscription   Inscription? @relation(fields: [inscriptionId], references: [id])
}

model Certification {
  id                  Int          @id @default(autoincrement())
  certificationNumber String       @unique
  filePath            String
  generationDate      DateTime
  inscriptionId       Int?
  inscription         Inscription? @relation(fields: [inscriptionId], references: [id])
}

enum Sex {
  MALE
  FEMALE
}

enum Role {
  AGENT
  STUDENT
}

enum STATUS {
  PENDING
  VALIDATED
  REJECTED
}
